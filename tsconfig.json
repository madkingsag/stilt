{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./.build",
    "baseUrl": "./app",
    "lib": ["es2015", "es2016", "es2017", "es2018", "dom", "esnext", "dom.iterable"],
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "packages/**/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
