{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2021",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "outDir": "./.build",
    "baseUrl": "./app",
    "lib": ["ES2021", "dom", "esnext", "dom.iterable"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": false,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "Node"
  },
  "include": [
    "packages/**/src/**/*",
    "packages/**/__tests__/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
